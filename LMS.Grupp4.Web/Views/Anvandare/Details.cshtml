@model AnvandarDetaljerViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Profil</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Avatar)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Avatar" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EfterNamn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EfterNamn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ForNamn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ForNamn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Kurser)
        </dt>
        <dd class="col-sm-10">
            @foreach (var Kurs in Model.Kurser)
            {
                <a asp-controller="Kurser" asp-action="Details" asp-route-id="@Kurs.Id">@Kurs.Namn</a><br />

            }
        </dd>

    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a  asp-controller="Kurser" asp-action="Index">Back to KurserList</a>
</div>
