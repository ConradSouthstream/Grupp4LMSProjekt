@model IEnumerable<Anvandare>
@{
    ViewData["Title"] = "Admin";
}
<h1 class="">Användare</h1>
<a asp-action="Create" class="btn btn-secondary">Skapa ny användare</a>

<table class="table table-sm table-bordered">
    <tr>
        <th>Användarnamn/Email</th>
        <th>Namn</th>
        <th>Avatar</th>
        <th>Kurs anknytningar</th>
        <th>Uppdatera</th>
        <th>Ta bort</th>
    </tr>
    @foreach (Anvandare user in Model)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.FullNamn</td>
            <td><img src='@user.Avatar' /></td>
            <td>
                @foreach (var item in user.KurserAnvandare.Where(anvkurs => anvkurs.AnvandareId == user.Id))
                    {
                        <div>@item.Kurs.Namn</div>
                    }
            </td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@user.Id">
                    Uppdatera
                </a>
            </td>
            <td>
    
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
    
                    <button type="submit" class="btn btn-sm btn-danger">Ta bort</button>
            </form>
            </td>
        </tr>
    }
</table>
