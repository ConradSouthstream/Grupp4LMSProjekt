@model AdminListUsersViewModel
@{
    ViewData["Title"] = "Admin";
}
<h1 class="">Användare</h1>
<a asp-action="CreateLarare" class="btn btn-secondary">Registrera ny lärare</a>
<a asp-action="CreateElev" class="btn btn-secondary">Registrera ny elev</a>

<h2>Lärare</h2>
<table class="table table-sm table-bordered">
        <tr>
            <th>Användarnamn/Epost</th>
            <th>Full Name</th>
            <th>Avatar</th>
            <th>Uppdatera</th>
            <th>Ta bort</th>
        </tr>

        @foreach (Anvandare user in Model.Larare)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.FullNamn</td>

                <td><img src='@user.Avatar' /></td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="UpdateLarare" asp-route-id="@user.Id">
                        Uppdatera
                    </a>
                </td>
                <td>
                    <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">Ta bort</button>
                    </form>
                </td>
            </tr>
        }
</table>
<h2>Elever</h2>
<table class="table table-sm table-bordered">
    <tr>
        <th>Användarnamn/Epost</th>
        <th>Full Name</th>
        <th>Avatar</th>
        <th>Uppdatera</th>
        <th>Ta bort</th>
    </tr>

    @foreach (Anvandare user in Model.Elever)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.FullNamn</td>

            <td><img src='@user.Avatar' /></td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="UpdateElev" asp-route-id="@user.Id">
                    Uppdatera
                </a>
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">Ta bort</button>
                </form>
            </td>
        </tr>
    }
</table>
