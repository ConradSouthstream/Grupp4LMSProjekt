@model IEnumerable<Anvandare>
@{
    ViewData["Title"] = "Admin";
}
<h1 class="bg-info text-white">Användare</h1>
<a asp-action="Create" class="btn btn-secondary">Skapa ny användare</a>

<table class="table table-sm table-bordered">
    <tr><th>Name</th><th>Email</th><th>Uppdatera</th><th>Ta bort</th></tr>
    @foreach (Anvandare user in Model)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@user.Id">
                    Uppdatera
                </a>
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">Ta bort</button>
                </form>
            </td>
        </tr>
    }
</table>
