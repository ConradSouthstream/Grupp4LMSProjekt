@model LMS.Grupp4.Core.ViewModels.Admin.AdminCreateLarareViewModel
@{
    ViewData["Title"] = "Create";
}

<h1 class="">Registrera ny lärare</h1>
<a asp-action="Index" class="btn btn-secondary">Tillbaka</a>
<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">
    <div class="form-group">
        <label asp-for="ForNamn">Förnamn</label>
        <input asp-for="ForNamn" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EfterNamn">Efternamn</label>
        <input asp-for="EfterNamn" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email">Användarnamn/Epost</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Avatar"></label>
        <input asp-for="Avatar" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="KursId">Kurs</label>
        <select multiple="multiple" asp-for="KursId"
                asp-items="@(new MultiSelectList(Model.Kurser,"Id","Namn", Model.KursId))" class="form-control multi-select">
            <option selected="selected" value="">Välj kurser</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Registrera läraren</button>
</form>

  