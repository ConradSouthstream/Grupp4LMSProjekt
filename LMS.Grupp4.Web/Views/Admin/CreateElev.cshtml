@model LMS.Grupp4.Core.ViewModels.Admin.AdminCreateElevViewModel
@{
    ViewData["Title"] = "Create";
}

<h1 class="">Registrera ny elev på kursen @Model.Kurs.Namn</h1>
<a asp-action="Index" class="btn btn-secondary">Tillbaka</a>
<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">
    <div class="form-group">
        <label asp-for="ForNamn">Förnamn</label>
        <input asp-for="ForNamn" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EfterNamn">Efternamn</label>
        <input asp-for="EfterNamn" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email">Användarnamn/Epost</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Avatar"></label>
        <input asp-for="Avatar" class="form-control" />
    </div>
    
    <button type="submit" class="btn btn-primary">Registrera eleven</button>
</form>
