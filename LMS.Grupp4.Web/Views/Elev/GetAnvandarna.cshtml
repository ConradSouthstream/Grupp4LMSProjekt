@model LMS.Grupp4.Core.ViewModels.Elev.AnvandarElevDetaljerViewModel

@{
    ViewData["Title"] = "Användare";
}

<div>
    @if (Model != null)
    {
        <h4>Kurs</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.KursNamn)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.KursNamn)
            </dd>
        </dl>

        <hr />
        <h4>Lärare</h4>
        <hr />
        @if (Model.Larare?.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Larare.First().FullNamn)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Larare.First().Email)
                        </th>
                        <th>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Larare)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FullNamn)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                <img src="@item.Avatar" alt="Image avatar" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div>Det finns inga lärare</div>
        }

        <hr />
        <h4>Elever</h4>
        <hr />
        @if (Model.Elever?.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Elever.First().FullNamn)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Elever.First().Email)
                        </th>
                        <th>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Elever)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullNamn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            <img src="@item.Avatar" alt="Image avatar" />
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div>Det finns inga elever</div>
        }
    }
    else
    {
        <div>Det finns ingen information</div>
    }
</div>
<div>
    <a asp-action="Index">Tillbaka till kurs</a>
</div>
