@model LMS.Grupp4.Core.ViewModels.Aktivitet.AktivitetCreateViewModel

@{
    ViewData["Title"] = "Skapa aktivitet";
}

<h1>@ViewData["Title"] </h1>

@{ await Html.RenderPartialAsync("_MessageView"); }

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div>
                <input type="hidden" asp-for="ModulId" />
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="AktivitetTypId" class="control-label">Aktivitettyp</label>
                @Html.DropDownList("AktivitetTypId", Model.AktivitetTyper, new { @class = "form-control" })
                <span asp-validation-for="AktivitetTypId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Namn" class="control-label"></label>
                <input asp-for="Namn" class="form-control" />
                <span asp-validation-for="Namn" class="text-danger"></span>
            </div>
            <div class="col-12">
                <div class="row colpadding">
                    <div class="col-12 center topbar LRpad-0">Datum gällande Modul och aktiviteter</div>
                    <div class="col-4 center">
                        @Html.DisplayFor(Model => Model.ModulNamn)
                    </div>
                    <div class="col-4 center">
                        @Html.DisplayFor(Model => Model.ModulStartDatum)
                    </div>
                    <div class="col-4 center">
                        @Html.DisplayFor(Model => Model.ModulSlutDatum)
                    </div>
                </div>
                <div class="colpadding">
                    <div class="row topbar LRpad-0">
                        <div class="col-4 center">
                            Modul
                        </div>
                        <div class="col-4 center">
                            Från
                        </div>
                        <div class="col-4 center">
                            Till
                        </div>
                    </div>                    
                    @foreach (var item in @Model.Aktiviteter.OrderBy(o => o.StartDatum))
                    {
                        <listdivision class="row">
                            <div class="col-4 center">
                                @item.Namn
                            </div>
                            <div class="col-4 center">
                                @Html.DisplayFor(modulitem => item.StartDatum)
                            </div>
                            <div class="col-4 center">
                                @Html.DisplayFor(modulitem => item.SlutDatum)
                            </div>
                        </listdivision>
                    }
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Beskrivning" class="control-label"></label>
                <input asp-for="Beskrivning" class="form-control" />
                <span asp-validation-for="Beskrivning" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Skapa" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
