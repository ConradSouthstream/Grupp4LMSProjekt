@model IEnumerable<LMS.Grupp4.Core.ViewModels.Aktivitet.AktivitetListViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@{ await Html.RenderPartialAsync("_MessageView"); }

<p>
    <a asp-action="Create" asp-route-id="1">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
