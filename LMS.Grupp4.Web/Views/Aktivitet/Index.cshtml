        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AktivitetId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AktivitetNamn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartTid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SlutTid)
                </td>
