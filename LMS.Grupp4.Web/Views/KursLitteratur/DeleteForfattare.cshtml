@model LMS.Grupp4.Core.ViewModels.KursLitteratur.KursLitteraturEditForfattareViewModel

@{
    ViewData["Title"] = "Radera Författare";
}

<h1>Radera Författare</h1>

<h3>Vill ni verkligen radera författaren?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ForNamn)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ForNamn)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EfterNamn)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EfterNamn)
        </dd>
    </dl>
    
    <form asp-action="DeleteForfattare">
        <input type="hidden" id="ForfatterId" name="ForfatterId" value="@Model.ForfatterId" />
        <input type="hidden" id="LitteraturId" name="LitteraturId" value="@Model.LitteraturId" />
        <input type="hidden" id="ForNamn" name="ForNamn" value="@Model.ForNamn" />
        <input type="hidden" id="EfterNamn" name="EfterNamn" value="@Model.EfterNamn" />
        <input type="submit" value="Radera författaren" class="btn btn-danger" />
    </form>
</div>
