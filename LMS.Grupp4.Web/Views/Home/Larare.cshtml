                @Html.DisplayNameFor(model => model.KursStatus)
            </h5>
            <h5 class="col-1 card-header corner-right border-right-0">
                
            </h5>
        </div>

        <div>
            @foreach (var item in Model)
            {
                <div class="row">
                    @*<div class="card-header">
                        <h5 class="mb-0">
                            <button class="btn btn-link" data-toggle="collapse" data-target="#@("collapse" + item.Id)">
                                Collapsible Group Item #1
                            </button>
                        </h5>
                    </div>*@


                    <div class="col-2 border-left border-right border-bottom" data-toggle="collapse" data-target="#@("collapse" + item.Id)">
                        @Html.DisplayFor(modelItem => item.Namn)
                    </div>
                    <div class="col-2 border-right border-bottom">
                        @Html.DisplayFor(modelItem => item.StartDatum)
                    </div>
                    <div class="col-2 border-right border-bottom">
                        @Html.DisplayFor(modelItem => item.SlutDatum)
                    </div>
                    <div class="col-4 text-right border-right border-bottom btn-link" data-toggle="collapse" data-target="#@("collapse" + item.Id)">
                        Visa Beskrivning
                    </div>

                    <div class="col-1 border-right border-bottom">
                        @Html.DisplayFor(modelItem => item.KursStatus)
                    </div>
                    <div class="col-1 border-bottom border-right">
                        <a asp-controller="kurser" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a asp-controller="kurser" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a asp-controller="kurser" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </div>
                </div>
                <div>
                    <div id="@("collapse" + item.Id)" class="row collapse">
                        <div class="col-10 pad-0">
                            <h5 class="card-header">
                                Beskrivning:
                            </h5>
                            <div class="card card-body">
                                @Html.DisplayFor(modelItem => item.Beskrivning)
                            </div>
                        </div>
                        <div class="col-2 pad-0">
                            <h5 class="card-header">
                                Moduler
                            </h5>
                            <div class="card card-body">
                                @foreach (var modul in item.Moduler)
                                {
                                    <a asp-controller="Moduler" asp-action="Details" asp-route-id="@modul.Id">
                                        @modul.Namn<br />
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

